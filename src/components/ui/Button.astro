---
const { link, background, download } = Astro.props;
---

{
  background ? (
    <a href={link} download={download} class="flex space-x-2 items-center px-2 py-1 pr-3 font-semibold rounded-md bg-blue-500 hover:bg-blue-600 cursor-pointer transition-colors duration-300">
      <slot />
    </a>
  ) : (
    <a
      href={link}
      class="flex items-center hover:text-blue-500 transition-colors duration-300 cursor-pointer"
      target="_blank"
      rel="noopener noreferrer"
    >
      <slot />
    </a>
  )
}
