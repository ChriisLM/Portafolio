---
import ProjectCard from "../components/ui/ProjectCard.astro";
import Layout from "../layouts/Layout.astro";
import projects from "../data/projectsDB.json";
import { ProjectsIcon } from "../icons";
---

<Layout>
  <section class="text-left w-full px-4 sm:px-8 md:px-16 lg:px-24 mx-auto">
    <a
      href="/"
      class="absolute top-20 left-20 bg-blue-500/20 border border-blue-500 hover:bg-blue-600/60 hover:border-transparent cursor-pointer text-white px-4 py-2 rounded-lg shadow-lg transition duration-300 z-50"
    >
      &lt; Volver
    </a>
    <div class="flex space-x-4 items-end mb-12">
      <ProjectsIcon className="h-8 w-8" />
      <h2 class="text-4xl text-white font-bold">Proyectos</h2>
    </div>
    <div class="flex flex-col space-y-6">
      {projects.map((project) => <ProjectCard project={project} />)}
    </div>
  </section>
</Layout>
